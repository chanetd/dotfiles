{
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
    },
    "metals": {
        "serverVersion": "0.9.0",
        "command": "metals-vim",
        "rootPatterns": ["build.sbt"],
        "filetypes": ["scala", "sbt"]
    }
  }
}
